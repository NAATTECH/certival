
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using CERTIVAL.Models


@model CERTIVAL.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Recuperar el acceso a tu cuenta";
}



@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div>
        <h2>@ViewBag.Title.</h2>
        <h4>¿Cuál es tu dirección de correo electrónico?.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo Electrónico" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" class="button-large pure-button pure-button-primary col-md-10" value="Enviar Mail " />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
